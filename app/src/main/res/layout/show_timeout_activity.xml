<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showTimeoutActivityLayout"
 	android:layout_width="match_parent"
 	android:layout_height="match_parent"
 	android:orientation="vertical"
 	android:background="@mipmap/bg_global_left_normal">

    <!-- 标题栏  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginBottom="23dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >
        
        <TextView
            android:text="提示"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:gravity="center"
            android:textColor="@color/grey"
            android:layout_gravity="left|center_vertical"
            android:textSize="35sp" />
        
         <TextView
            android:id="@+id/tvTimeoutMessage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingRight="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center|right"
            android:textColor="#ff0000"
            android:textSize="35sp" />

    </LinearLayout>

    <TextView
        android:text="操作超时,即将退出"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#aaaaaa"
        android:paddingBottom="100dp"
        android:textSize="38sp" />
    
    <ImageButton style="@style/continue_button_style"
        android:layout_gravity="center"
        android:contentDescription="@string/content_description"
        android:id="@+id/imgButtonTimeout" />
    
  </LinearLayout>